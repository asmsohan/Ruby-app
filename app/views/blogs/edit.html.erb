<h3>Editing blog</h3>

<% if @blog.errors.any? %>
  <h3>The following errors are occured-</h3>

  <ul>
    <% @blog.errors.full_messages.each do |msg| %>
      <li>
        <%= msg  %>
      </li>
    <% end %>
  </ul>

<% end %>

<%= form_with(model:@blog, local:true) do |f| %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
