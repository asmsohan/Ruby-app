<h2>Blog listing page</h2>


<table>
  <thead>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3">Action</th>
  </thead>
  <tbody>
    <% @blogs.each do |blog| %>
      <tr style="border:1px solid #000; background-color:#ececec">
        <td><%= blog.title %></td>
        <td><%= blog.description %></td>
        <td><%= link_to 'Show', blog_path(blog.id) %></td>
        <td><%= link_to 'edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Delete', blog_path(blog.id), method: :delete, data:{ confirm: "Are you sure, you want to delete?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'Create new blog', new_blog_path() %>
</p>
